<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Sign Up</servlet-name>
        <servlet-class>Auth.Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Sign Up</servlet-name>
        <url-pattern>/sign_up</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Sign In</servlet-name>
        <servlet-class>Auth.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Sign In</servlet-name>
        <url-pattern>/sign_in</url-pattern>
    </servlet-mapping>
</web-app>